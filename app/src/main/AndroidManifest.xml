<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.simalee.nocheats">
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_app_logo"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".module.MainActivity"
            android:theme="@style/AppTheme.NoActionBar"
            >
        </activity>
        <!-- account module start -->
        <activity android:name=".module.experiencesquare.view.PreviousPostActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".module.topicsquare.view.PreviousTopicActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".module.account.view.AccountManagementActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".module.account.view.LoginActivity"
            android:launchMode="singleTask"
            android:theme="@style/AppTheme.NoActionBar_No_WindowTranslucentStatus">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

        </activity>

        <activity android:name=".module.account.view.RegisterActivity"
            android:theme="@style/AppTheme.NoActionBar_No_WindowTranslucentStatus"/>
        <activity android:name=".module.account.view.RegisterStep2Activity"
            android:theme="@style/AppTheme.NoActionBar_No_WindowTranslucentStatus"/>
        <activity android:name=".module.account.view.RegisterStep3Activity"
            android:theme="@style/AppTheme.NoActionBar_No_WindowTranslucentStatus"/>
        <!-- account module end -->


        <!-- experience module start -->
        <activity android:name=".module.experiencesquare.view.PostDetailActivity"
            android:theme="@style/AppTheme.NoActionBar_No_WindowTranslucentStatus"/>
        <activity android:name=".module.experiencesquare.view.NewPostActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity android:name=".module.experiencesquare.view.ReplyDetailActivity"
            android:theme="@style/AppTheme.NoActionBar_No_WindowTranslucentStatus"/>

        <!-- experience module end -->

        <!-- topic module start -->
        <activity android:name=".module.topicsquare.view.TopicDetailActivity"
            android:theme="@style/AppTheme.NoActionBar_No_WindowTranslucentStatus"/>
        <activity android:name=".module.topicsquare.view.NewTopicActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <!-- topic module end -->

        <!-- assistant module start -->
        <activity android:name=".module.assistant.AssistantActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <!-- assistant module end -->

        <activity android:name=".module.account.view.AccountManagement.SetNameActivity"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity android:name=".module.account.view.AccountManagement.SetSexActivity"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity android:name=".module.account.view.AccountManagement.SetSignatureActivity"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
        <activity android:name=".module.account.view.AccountManagement.SetResumeActivity"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>

        <activity android:name=".module.account.view.AccountManagement.ChangePasswdActivity"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>

        <activity android:name=".module.assistant.PreventCheatsGameActivity"
            android:theme="@style/AppTheme.NoActionBar"/>

        <activity android:name=".module.assistant.PreventCheatsTipsActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>